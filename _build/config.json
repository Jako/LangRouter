{
  "name": "LangRouter",
  "lowCaseName": "langrouter",
  "description": "Language Router for Babel",
  "author": "Grzegorz Adamiak, Thomas Jakobi",
  "version": "1.3.4",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "LangRouter",
          "file": "langrouter.plugin.php",
          "events": [
            "OnHandleRequest",
            "OnContextSave",
            "OnContextRemove",
            "OnSiteRefresh"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "response_code",
        "area": "system",
        "value": "HTTP/1.1 301 Moved Permanently"
      },
      {
        "key": "contextKeys",
        "area": "system",
        "value": ""
      },
      {
        "key": "contextDefault",
        "area": "system",
        "value": ""
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=5.6"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "options": {
      "abort_install_on_vehicle_fail": true
    },
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "before": [
        "langrouter.set_options.php"
      ],
      "after": [
        "resolve.treehillstudio.php"
      ]
    }
  }
}
